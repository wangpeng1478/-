@import "../../pages/index/index.wxss";

.section_picker {
    display: flex;
    height: 88rpx;
    box-shadow: 0 3rpx 8rpx 0rpx rgba(0, 0, 0, 0.2);
    background: #fff;
}

.section_picker picker {
    width: 25%;
    text-align: center;
    line-height: 88rpx;
}

.section_picker picker view {
    font-size: 25rpx;
    position: relative;
    color: #665c52;
}

.section_picker picker view::after {
    content: "";
    display: block;
    border-top: solid 1px #665c52;
    border-right: solid 1px #665c52;
    width: 10rpx;
    height: 10rpx;
    transform: rotate(-225deg);
    position: absolute;
    top: 50%;
    right: 45rpx;
    margin-top: -8rpx;
}

.searchS {
    width: 100%;
    background: #efeff4;
    position: relative;
    height: 70rpx;
}

.searchS .searchSN {
    width: 95%;
    height: 50rpx;
    background: #fff;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 8rpx;
}

.searchS .searchSN view {
    display: inline-block;
    font-size: 25rpx;
    vertical-align: 3rpx;
    color: #666;
    margin-left: 2rpx;
}

.searchS .searchSN icon {
    display: inline-block;
    vertical-align: -2rpx;
    margin-right: 2rpx;
}

.shiaxuanT {
    display: inline-block;
    background: #f5f8ff;
    border: 1px dashed #ced1de;
    font-size: 25rpx;
    color: #6e6e6e;
