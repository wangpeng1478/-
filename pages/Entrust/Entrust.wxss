.navImg {
    width: 100%;
    height: 350rpx;
    position: relative;
}

.navImg image {
    width: 100%;
    height: 100%;
}

.navImg .t1, .navImg .t2 {
    position: absolute;
    width: 100%;
    display: block;
    text-align: center;
    color: #fff;
}
.navImg .t1 {
    top: 60rpx;
    font-size: 50rpx;
    letter-spacing: 8rpx;
}

.navImg .t2 {
    top: 140rpx;
    font-size: 30rpx;
}
.ebox{
    width: 680rpx;
    margin: -70rpx auto 0 auto;
    z-index: 5;
}
.ebox .c1 , .ebox .c2{
    display: block;
    text-align: center;
}
.ebox .c1{
    height: 70rpx;
    line-height: 70rpx;
    background: rgba(255,255,255,.8);
    border-top-right-radius: 15rpx;
    border-top-left-radius: 15rpx;
    color: #262313;
    font-size: 30rpx;
}
.yuebg{
    width:100%;
    height: 102rpx;
    margin-top: 20rpx;
}
.yuebg image{
    width: 100%;
    height: 100%;
}
.form{
     width: 100%;
     margin: 20rpx auto;
}
form{display: block}
.form input{
    font-size: 25rpx;
    border: 1px solid #ddd;
    margin: 10rpx auto;
    padding: 10rpx 25rpx;
    color: #666;
    border-radius: 8rpx;
}
.form textarea{
    font-size: 27rpx;
    color: #666;
    border: 1px solid #ddd;
    margin: 30rpx auto 20rpx auto;
    width: 647rpx;
    padding: 20rpx 15rpx;
    height: 150rpx;
    border-radius: 8rpx;
}
.form button{
    background:#00b86b;
    color:#fff;
    font-size: 25rpx;
    padding: 10rpx 0;
    border-radius: 8rpx;
}
.ebox .box{
    margin: 20rpx 0;
}
.ebox .box .t{
    color:#262313;
     font-size: 30rpx;
     text-align: center;
     padding: 30rpx 0;
}
.ebox .box .p{
    text-indent: 2em;
    color: #666;
    font-size: 23rpx;
}
.ul{
    width: 250rpx;
    margin: 50rpx auto;
}
.ul .li{
    font-size: 25rpx;
    color: #262313;
    margin: 5rpx 0;
    white-space: nowrap;
}
.ul .li text{
    font-weight: bold;
    padding-right: 10rpx;
    color: #00b86b;
    position: relative;
}
.ul .li text::after{
    content: "";
    position: absolute;
    left: -35rpx;
    top: -2rpx;
    width: 30rpx;
    height: 30rpx;
    background: transparent url(data:image/png;base64,) center center no-repeat;
    background-size: 30rpx auto;
}
